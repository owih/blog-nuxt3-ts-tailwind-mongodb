generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url = "file:./dev.db"
}

model Skill {
  id               Int            @id @default(autoincrement())
  name             String         @unique
  subskills        Subskill[]
}

model Subskill {
  id          Int      @id @default(autoincrement())
  skill       Skill    @relation(fields: [skillId], references: [id])
  skillId     Int
  basic       Boolean  @default(false)
  pinned      Boolean? @default(false)
  name        String
}

model Portfolio {
  id          Int      @id @default(autoincrement())
  title       String
  info        String?
  tecnologys  PortfolioOnTecnologies[]
  preview     String
  gif         String
  linkWeb     String?
  linkGit     String?
}

model Tecnology {
  id              Int          @id @default(autoincrement())
  name            String
  portfolio       PortfolioOnTecnologies[]
}

model PortfolioOnTecnologies {
  portfolio       Portfolio     @relation(fields: [portfolioId], references: [id])
  portfolioId     Int
  tecnology   Tecnology @relation(fields: [tecnologyId], references: [id])
  tecnologyId Int
  assignedAt DateTime @default(now())
  assignedBy String

  @@id([portfolioId, tecnologyId])
}

model Feedback {
  id               Int            @id @default(autoincrement())
  name             String
  email            String
  message          String?
}
