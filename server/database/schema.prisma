generator client {
  provider = "prisma-client-js"
  previewFeatures = ["referentialIntegrity"]
}

datasource db {
  provider = "sqlite"
  url = env("DATABASE_URL")
}

model Skill {
  id               Int            @id @default(autoincrement())
  name             String         @unique
  subskills        Subskill[]
}

model Subskill {
  id          Int      @id @default(autoincrement())
  skill       Skill    @relation(fields: [skillId], references: [id])
  skillId     Int
  basic       Boolean
  name        String
}
